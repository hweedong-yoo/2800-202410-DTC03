<%- include('partials/header.ejs') %>

    <div class="flex-grow flex justify-center items-center bg-white ">
        <form class="max-w-sm mx-4 rounded-lg shadow-lg bg-gray-100 p-5 flex flex-col justify-center items-center"
            action="" method="post">
            <div class="w-full mb-4 text-center">
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Security Question</h1>
            </div>
            <label for="countries" class="block text-md font-medium text-gray-500 mb-4 px-2 text-center">
                <%= recovery %>
            </label>
            <div class="relative mb-4">
                <input id="answer" name="answer" type="text" id="floating-outlined" value=""
                    class="block px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 bg-transparent rounded-lg border-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                    placeholder=" " />
                <label for="floating-outlined"
                    class="absolute text-xs text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-100 dark:bg-gray-800 px-2 peer-focus:px-2 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1">Answer</label>
            </div>
            <div class="mx-10">
                <button type="submit"
                    class="text-white bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-10 py-2.5 text-center opacity-75" disabled>Next</button>
            </div>
            <% if (error) { %>
                <% var formattedError=error.replace(/-/g, ' ' ); %>
                    <p class="text-red-500 text-sm mt-2">
                        <%= formattedError %>.
                    </p>
                    <% } %>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const answerInput = document.getElementById('answer');
            const submitButton = document.querySelector('button[type="submit"]');

            // Function to check if the answer is valid
            const checkAnswerValidity = () => {
                console.log(answerInput.value);
                if (answerInput.value.length < 1) {
                    submitButton.classList.add('opacity-75'); // Reduce the opacity of the submit button
                    // Disable the submit button since the answer is invalid
                    submitButton.disabled = true;
                } else {
                    submitButton.classList.remove('opacity-75'); // Revert the opacity of the submit button
                    // Enable the submit button
                    submitButton.disabled = false;
                }
            };

            answerInput.addEventListener('input', checkAnswerValidity);
        });
    </script>

    <%- include('partials/footer.ejs') %>