<%- include('partials/header.ejs') %>

  <div class="flex-grow flex justify-center items-center bg-white dark:bg-gray-900 mb-8">
    <form class="max-w-sm mx-auto flex flex-col justify-center items-center rounded-xl shadow-xl bg-gray-100 dark:bg-gray-800 p-5"
      method="post" action="/setup/email">
      <div class="flex justify-between w-full text-gray-700 dark:text-gray-300 text-xs mb-4">
        <div>Account set up</div>
        <div>1/3</div>
      </div>
      <div class="mb-4">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Email Verification</h1>
      </div>
      <div class="text-center">
        <p class="mb-5 text-sm text-gray-700 dark:text-gray-300 px-4">We have send an email to <a class="text-blue-700"><%= email %></a>. Please click the link to verify your account.</p>
        <div class="border-t border-gray-300 w-full my-5"></div>
        <p class="mb-5 text-sm text-gray-700 dark:text-gray-300 text-center">Didn't Recieve one? <button type="submit" class="text-blue-700">Resent another email.</button></p>
      </div>
    </form>
  </div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
</body>
</html>