                    show: false,
                    labels: {
                        formatter: function (value) {
                            return '$' + value;
                        }
                    }
                },
            }

            if (document.getElementById("bmi-chart") && typeof ApexCharts !== 'undefined') {
                const chart = new ApexCharts(document.getElementById("bmi-chart"), options);
                chart.render();
            }
        </script>

