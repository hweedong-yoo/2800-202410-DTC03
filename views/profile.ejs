<%- include('partials/header.ejs') %>

<div class="p-4 font-[Orbitron] text-[#455780] font-bold bg-gradient-to-b from-[#D1D9E9] to-[#FCFEFE]">

  <h1 class="text-center py-2 text-4xl font-[Orbitron] font-extrabold">Profile</h1>

  <!-- Name, Email, and Implant ID card -->
  <div class="rounded-3xl shadow-lg px-2 py-4 m-4 bg-[#FCFEFE]">
    <!-- name -->
    <div class="px-2">
      <p class="text-lg pb-1">Name</p>
      <p class="text-2xl font-semibold pl-2 text-[#354666]"><%= user.username %></p>
    </div>
    <!-- email -->
    <div class="px-2 pt-4">
      <p class="text-lg pb-1">Email</p>
      <p class="text-2xl font-semibold pl-2 text-[#354666]"><%= user.email %></p>
    </div>
    <!-- impant id -->
    <div class="px-2 pt-4">
      <p class="text-lg pb-1">Implant ID</p>
      <p class="text-2xl font-semibold pl-2 text-[#354666]"><%= user.id %></p>
    </div>
  </div>

  <!-- DOB, Sex, Weight, and Height card -->
  <div class="rounded-3xl shadow-lg pt-2 m-4 mt-6 bg-[#FCFEFE]">
    <!-- Edit Button -->
    <a href="/edit_profile" type="button" id="editBtn" name="editBtn"
      class="float-right text-blue-700 pt-0 pb-2 pr-5 focus:text-blue-950 tracking-wider"> <span class="material-symbols-outlined text-lg">
        edit
      </span> Edit</a>

    <!-- sex -->
    <div class="px-4 pt-4">
      <p class="text-lg pb-1">Sex</p>
      <p class="text-2xl font-semibold pl-2 text-[#354666]"><%= user.sex %></p>
    </div>
    <!-- birthday -->
    <div class="px-4 pt-4">
      <p class="text-lg pb-1">Birthday</p>
      <p class="text-2xl font-semibold pl-2 text-[#354666]"><%= user.dob %></p>
    </div>
    <!-- Weight and Height inner card -->
    <div class="flex flex-row justify-around border-t px-3 mt-5 pb-6 rounded-3xl">
      <!-- weight -->
      <div class="px-2 pt-4">
        <p class="text-lg pb-1">Weight</p>
        <p class="text-2xl font-semibold pl-2 text-[#354666]"><%= user.weight %> kg</p>
      </div>
      <!-- height -->
      <div class="px-2 pt-4">
        <p class="text-lg pb-1">Height</p>
        <p class="text-2xl font-semibold pl-2 text-[#354666]"><%= user.height %> cm</p>
      </div>
    </div>
  </div>

  <!-- Logout button -->
  <form id="logoutForm" method="post" class="pb-14 flex justify-center">
    <button type="submit" id="logoutBtn" name="logoutBtn"
      class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 tracking-wider">Logout</button>
  </form>

</div>

  <%- include('partials/bottomNav.ejs') %>