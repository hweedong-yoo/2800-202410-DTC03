<%- include('partials/header.ejs') %>

<div class="p-4 font-[Orbitron] text-[#455780] font-bold bg-gradient-to-b from-[#D1D9E9] to-[#FCFEFE]">


  <h1 class="text-center py-2 text-5xl font-[Orbitron] font-extrabold">Profile</h1>

  <div class="border-2 rounded-3xl drop-shadow-lg px-2 py-4 m-4 mt-4 bg-[#FCFEFE]">
    <div class="px-2">
      <p class="text-3xl pb-1">Name</p>
      <p id="usersName" class="text-2xl font-semibold pl-4">User's Name</p>
    </div>
    <div class="px-2 pt-4">
      <p class="text-3xl pb-1">Email</p>
      <p id="usersEmail" class="text-2xl font-semibold pl-4">User's Email</p>
    </div>
  </div>

  <div class="border-2 rounded-3xl drop-shadow-lg px-2 py-4 m-4 mt-6 bg-[#FCFEFE]">
      <button type="button"
        class="float-right text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800">Edit</button>

    <div class="px-2 pt-4">
      <p class="text-3xl pb-1">Birthday</p>
      <p id="usersBirthday" class="text-2xl font-semibold pl-4">User's Birthday</p>
    </div>
    <div class="px-2 pt-4">
      <p class="text-3xl pb-1">Gender</p>
      <p id="usersGender" class="text-2xl font-semibold pl-4">User's Gender</p>
    </div>
    <div class="px-2 pt-4">
      <p class="text-3xl pb-1">Weight</p>
      <p id="usersWeight" class="text-2xl font-semibold pl-4">User's Weight</p>
    </div>
    <div class="px-2 pt-4">
      <p class="text-3xl pb-1">Height</p>
      <p id="usersHeight" class="text-2xl font-semibold pl-4">User's Height</p>
    </div>
  </div>

  <div class="pb-14 flex justify-center">
    <button type="button" id="logoutBtn" name="logoutBtn"
      class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Logout</button>
  </div>

</div>

  <%- include('partials/bottomNav.ejs') %>