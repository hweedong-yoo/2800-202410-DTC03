        <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                let clickCount = 0;
                let clickTimer;
                const triggerElement = document.getElementById("easter-egg-trigger");

                triggerElement.addEventListener("click", () => {
                    clearTimeout(clickTimer);
                    clickCount++;

                    if (clickCount === 3) {
                        activateEasterEgg();
                    } else {
                        clickTimer = setTimeout(() => {
                            clickCount = 0;
                        }, 1000);
                    }
                });

                function activateEasterEgg() {
                    const lottieContainer = document.createElement("div");
                    lottieContainer.style.position = "fixed";
                    lottieContainer.style.top = "50%";
                    lottieContainer.style.left = "50%";
                    lottieContainer.style.transform = "translate(-50%, -50%)";
                    lottieContainer.style.width = "300px";
                    lottieContainer.style.height = "300px";
                    lottieContainer.style.zIndex = "9999";
                    lottieContainer.style.pointerEvents = "none";

                    lottieContainer.innerHTML = `
                        <dotlottie-player src="https://lottie.host/16cf67dd-1e12-44ec-9337-311aed6eb8ff/16DDWodoIK.json" background="transparent" speed="1" style="width: 300px; height: 300px" direction="1" playMode="normal" loop autoplay></dotlottie-player>
                    `;

                    document.body.appendChild(lottieContainer);

                    setTimeout(() => {
                        document.body.removeChild(lottieContainer);
                    }, 5000);
                }
            });
        </script>